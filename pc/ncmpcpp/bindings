# ---- General Navigation

def_key "h"
    previous_column
def_key "l"
    next_column
def_key "j"
    scroll_down
def_key "k"
    scroll_up

def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down


# ---- Browser navigation

def_key "l"
    enter_directory
def_key "h"
    jump_to_parent_directory

# ---- Song movement

def_key "J"
    move_selected_items_down
def_key "K"
    move_selected_items_up

# ---- Search navigation

def_key "enter"
    add_item_to_playlist
    play_item

def_key "space"
    select_item
    scroll_down
