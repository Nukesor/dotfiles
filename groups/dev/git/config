# vim: filetype=gitconfig
[user]
    name = Arne Beer
    email = contact@arne.beer
    signingkey = CC9408F679023B65

[commit]
    gpgsign = true

[init]
    defaultBranch = main

#### Functionality ####
[core]
    editor = vim
    pager = delta
#    # Required for mergiraf to work:
#    attributesfile = ~/.config/git/gitattributes

[submodule]
    recurse = true

[branch]
    autoSetupMerge = always

[push]
    default = simple
    # Automatically does -> git push origin -u
    autoSetupRemote = true

[pull]
    rebase = true

[fetch]
    prune = true
    all = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[merge]
    conflictstyle = zdiff3

#[merge "mergiraf"]
#    name = mergiraf
#    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P

[rerere]
    enabled = true
    autoupdate = true

[alias]
    lg = log --graph --all --format=format:'%C(yellow)%h%C(reset) - %C(cyan)%ci%C(reset) %C(green)(%cr)%C(reset) %C(bold yellow)%d%C(reset)%n          %C(white)%s%C(reset) %C(bold white)- %cn%C(reset)%n' --abbrev-commit --date=relative
    ls = status
    fwl = push --force-with-lease
    df = difftool

[absorb]
    # Allow git-absorb to look deeper into the history for branch-of detection
    maxStack=50

#### UX improvements ####
[commit]
    verbose = true

[branch]
    # Show newest commit branches first.
    sort = -committerdate

[tag]
    # Makes 0.5.101 to be sorted after 0.5.1000
    sort = version:refname

[grep]
    break = true
    heading = true
    lineNumber = true

#### Styling ####
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

#### Git diffs with delta ####
[interactive]
    diffFilter = delta --color-only

[delta]
    dark = true
    line-numbers = true
    hyperlinks = true
    hunk-header-style = raw
    hunk-header-decoration-style = none
    # Colorscheme
    syntax-theme = gruvbox-dark

#### Diffing with difftastic ####
[diff]
    # Display submodule-related information (commit listings)
    submodule = log
    colorMoved = zebra
    tool = difftastic

[difftool]
    prompt = false

[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE" --color=always

[pager]
    difftool = true

#### Git LFS ####
[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
