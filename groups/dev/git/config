# vim: filetype=gitconfig
[user]
    name = Arne Beer
    email = contact@arne.beer
    signingkey = CC9408F679023B65

[commit]
    gpgsign = true

[init]
    defaultBranch = main

#### Functionality ####

[core]
    editor = vim
    pager = delta

[submodule]
    recurse = true

[branch]
    autosetupmerge = always

[push]
    default = current

[pull]
    rebase = true

[remote "origin"]
    prune = true

[rebase]
    autoSquash = true
    updateRefs = true

[merge]
    conflictstyle = zdiff3

[rerere]
    enabled = true

[interactive]
    diffFilter = delta --color-only

[alias]
    lg = log --graph --all --format=format:'%C(yellow)%h%C(reset) - %C(cyan)%ci%C(reset) %C(green)(%cr)%C(reset) %C(bold yellow)%d%C(reset)%n          %C(white)%s%C(reset) %C(bold white)- %cn%C(reset)%n' --abbrev-commit --date=relative
    ls = status
    fwl = push --force-with-lease
    df = difftool

[grep]
  break = true
  heading = true
  lineNumber = true

# Allow git absorb to look deeper into the history for branch-of detection
[absorb]
    maxStack=50

#### Styling ####

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[diff]
    # Display submodule-related information (commit listings)
    submodule = log
    colorMoved = zebra
    tool = difftastic
[delta]
    dark = true
    line-numbers = true
    hyperlinks = true
    hunk-header-style = raw
    hunk-header-decoration-style = none
    # Colorscheme
    syntax-theme = gruvbox-dark
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE" --color=always
[pager]
    difftool = true

[filter "lfs"]
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
