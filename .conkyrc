#avoid flicker
double_buffer yes

#own window to run 2 or more conkys simultaneously
own_window yes
own_window_transparent no
own_window_type dock
own_window_hints undecorate,above,sticky,skip_taskbar,skip_pager

#borders
border_inner_margin 2
border_outer_margin 0
draw_borders no
draw_graph_borders no

#shades
draw_shades no

#behaviour
update_interval 10 
update_interval_on_battery 1

#colour
default_color white
#default_shade_color 000000
own_window_colour 101010
#font
use_xft yes
#xftfont Meslo LG S DZ:size=8
xftfont DejaVu Sans Mono:size=10

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

#${color} Date: $time; \
#${color} ${mpd_status}: ${mpd_artist} - ${mpd_title} / Vol: ${mpd_vol}; \

#to prevent window from moving
maximum_width 1920

default_graph_size 10 100
format_human_readable yes
short_units yes

TEXT
${cpugraph cpu0 10,100 AA5500 AA8800 -t -l} ${color darkgray}$cpu%${goto 140}\
${memgraph 10,100 FF3300 FFAA00 -t -l} ${color darkgray}$memperc%${goto 280}\
${diskiograph_read /dev/sda 10,100 663300 996633 -t -l} ↑${diskio_read /dev/sda} \
${diskiograph_write /dev/sda 10,100 663300 996633 -t -l} ↓${diskio_write} \
${if_existing /sys/class/net/enp4s0f2/operstate up} \
${upspeedgraph eth0 10,100 CCCC00 FFFF00 -t -l} ↑${upspeed enp4s0f2} \
${downspeedgraph eth0 10,100 CCCC00 FFFF00 -t -l} ↓${downspeed enp4s0f2} \
${else}\
${upspeedgraph wlan0 10,100 AA7700 FFDD00 -t -l} ↑${upspeed wlan0} \
${downspeedgraph wlan0 10,100 AA7700 FFDD00 -t -l} ↓${downspeed wlan0} \
${wireless_link_qual_perc wlan0}\
${endif}\
${color} Capacity: ${texeci 60 cat /sys/class/power_supply/BAT/capacity} %;\
${color} Status: ${texeci 60 cat /sys/class/power_supply/BAT/status};\
${color} ${mpd_status}: ${mpd_artist} - ${mpd_title} / Vol: ${mpd_vol}; \
${color} Notes: ${texeci 60 cat ~/.local/todo} 
