#Aliases
alias km='killall Telegram'
alias ks='killall skype'
alias upoff="blur && spacman -Syyu --noconfirm ; poweroff"

# Helper
alias clt='rm -rf ~/.local/share/Trash/* ; rm -rf ~/Desktop'
alias hotspot="sudo create_ap $(getWlanId) $(getEthernetId) lolnuke atomrofl"
alias susp='i3lock-blur && systemctl suspend'

# mpd & ncmpcpp
alias mpds='mpd ~/.config/mpd/mpd.conf && music'
alias music='mplayer http://arne.beer:8001'
alias jarvis='ncmpcpp -h arne.beer'

# Xset
alias noblank='xset s off && xset -dpms && xset s noblank'

PATH=$PATH:/home/$USER/.screenlayout/
